<%= form_with model: tweet, data: { turbo: false }, local: true do |form| %>
  <% if form.object.errors.any? %>
      <div class="alert alert-danger">
          <% form.object.errors.full_messages.each do |message| %>
              <div> <%= message %> </div>
          <% end %>
      </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :twitter_account_id %>
    <%= form.collection_select :twitter_account_id, current_user.twitter_accounts, :id, :username, {}, { class: "form-control" } %>
    <%= link_to "Connect another Twitter Account", "/auth/twitter" %>
  </div>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :publish_at %>
    <div class="form-control">
      <%= form.datetime_select :publish_at %>
    </div>
  </div>

  <%= form.button "Schedule", class: "btn btn-success" %>
<% end %>